<section class="page">
  <div class="centered-box">
    <center>
    <h1 class="sign_in_on">Create New User</h1>

    <%= render 'shared/errors' %>

    <form action="<%= users_url %>" method="post">
      <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

      <label for="user_email" class="entry_text">Email:</label>
      <input type="text"
        name="user[email]"
        id="user_email"
        value="<%= @user.email %>">
      <br>
      <br>
      <label for="user_password" class="entry_text">Password:</label>
      <input type="password"
        name="user[password]"
        id="user_password"
        value="<%= @user.password %>">
      <br>
      <br>
      <input type="submit" value="Create">
    </form>
    </center>
  </div>
</section>